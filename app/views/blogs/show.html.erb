<%= render 'schools/main_header' %>
  <!-- Page Header -->
  <header class="masthead" style="background-image: url(<%= @blog.image_url %>);background-size: cover; background-position: center;">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= @blog.title %></h1>
            <span class="meta">Posted on <%= @blog.created_at %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <p><%= @blog.description %></p>
        </div>
      </div>
    </div>
  </article>

  <hr>
  <%= render 'schools/footer' %>
