 <% if student_signed_in? %>
  <%= link_to "Log Out", destroy_student_session_path, method: :delete %>
<% else %>
  <%= link_to "Sign In", new_student_session_path %>
  <%= link_to "Sign up", new_student_registration_path %>
<% end %>
<p>
  <strong> Courses:</strong>
  <%= @student.following.count %>
</p>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Class</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @schoolcourses.each do |course| %>
      <tr>
        <td><%= link_to course.name, course %></td>
        <td><%= course.grade.name %></td>
        <% if @student.following?(course) %>
          <td>
            <%= form_with(model: @student.active_relationships.find_by(followed_id: course.id),
             html: { method: :delete }, local: true) do |f| %>
              <%= hidden_field_tag :follower_id, @student.id %>
              <%= f.submit "Unfollow", class: "btn btn-danger" %>
            <% end %>
          </td>
        <% else %>
          <td>
            <%= form_with(model: @student.active_relationships.build, local: true) do |f| %>
              <div><%= hidden_field_tag :followed_id, course.id %><%= hidden_field_tag :follower_id, @student.id %></div>
              <%= f.submit "Add Course", class: "btn btn-primary" %>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
