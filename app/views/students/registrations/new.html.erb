<% if admin_signed_in? %>
<div class="container-fluid">
  <div class="row no-gutter">
    <div class="d-md-flex col-md-4 col-lg-6 bg-image align-items-center px-5 py-5" style='background-image: url(<%= image_url("bg.jpg") %>)'>
      <p><b>Create the student account, add unique username and email e.g studentnumber and studentnumber@yourschoolname.ac.zw, you can create simple passwords for the students which they can change later when they are logged in</b></p>
    </div>
    <div class="col-md-8 col-lg-6">
      <div class="login d-flex align-items-center py-5">
        <div class="container">
          <div class="row">
            <div class="col-md-9 col-lg-8 mx-auto">
              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <h6><%= f.error_notification %></h6>
              <%= f.hidden_field :school_id, value: current_admin.school.id %>
              <div class="field">
                <div class="control">
                  <%= f.input :username, required: true, input_html: { class:"form-control" }, wrapper: false, label_html: { class:"label" } %>
                  <small class="form-text text-muted">Enter unique username like m12340012</small>
                </div>
              </div>
              <div class="field">
                <div class="control">
                  <%= f.input :name, required: true, input_html: { class:"form-control" }, wrapper: false, label_html: { class:"label" } %>
                </div>
              </div>
              <div class="field">
                <div class="control">
                  <%= f.input :email, required: true, input_html: { class:"form-control" }, wrapper: false, label_html: { class:"label" } %>
                  <small class="form-text text-muted">Enter unique email like m12340012@yourschoolename.ac.zw</small>
                </div>
              </div>
              <div class="field">
                <div class="control">
                  <%= f.input :password, required: true, input_html: { class:"form-control" }, wrapper: false, label_html: { class:"label" }, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                </div>
              </div>
              <div class="field">
                <div class="control">
                  <%= f.input :password_confirmation, required: true, input_html: { class: "form-control" }, wrapper: false, label_html: { class: "label" } %>
                </div>
              </div>
              <div class="field">
                <div class="control">
                  <%= f.select :grade_id, current_admin.grades.all.map {|grade| [grade.name, grade.id] } %>
                  <small class="form-text text-muted">Choose the class the student will be participating in</small>
                </div>
              </div>
              <div class="field">
                <div class="control">
                  <%= f.button :submit, "Create Student", class:"btn btn-success is-medium" %>
                </div>
              </div>
            <% end %>
            <br />
             <%= link_to 'Back', current_admin %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>