<%= form_with(model: Level.new, remote: true) do |f| %>
  <div class="form-inputs">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.hidden_field :portal_id, value: @portal.id %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
