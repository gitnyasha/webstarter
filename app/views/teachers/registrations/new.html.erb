<% if admin_signed_in? %>
<div class="container-fluid">
  <div class="row no-gutter">
    <div class="d-md-flex col-md-4 col-lg-6 bg-image align-items-center px-5 py-5">
      <p><b>Create the teacher account, add unique username and email e.g teachername and teachername@yourschoolname.ac.zw, you can create simple passwords for the teachers which they can change later when they are logged in</b></p>
    </div>
    <div class="col-md-8 col-lg-6">
      <div class="login d-flex align-items-center py-5">
        <div class="container">
          <div class="row">
            <div class="col-md-9 col-lg-8 mx-auto">
             <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= f.error_notification %>
              <div class="field">
                <div class="control">
                  <%= f.input :username, required: true, input_html: { class:"form-control" }, wrapper: false, label_html: { class:"label" } %>
                </div>
              </div>
              <div class="field">
                <div class="control">
                  <%= f.input :name, required: true, input_html: { class:"form-control" }, wrapper: false, label_html: { class:"label" } %>
                </div>
              </div>
              <div class="field">
                <div class="control">
                  <%= f.input :email, required: true, input_html: { class:"form-control" }, wrapper: false, label_html: { class:"label" } %>
                </div>
              </div>
              <div class="field">
                <div class="control">
                  <%= f.input :password, required: true, input_html: { class:"form-control" }, wrapper: false, label_html: { class:"label" }, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                </div>
              </div>
              <div class="field">
                <div class="control">
                  <%= f.input :password_confirmation, required: true, input_html: { class: "form-control" }, wrapper: false, label_html: { class: "label" } %>
                </div>
              </div>
              <%= f.hidden_field :school_id, value: current_admin.school.id %>
              <div class="field">
                <div class="control">
                  <%= f.button :submit, "Create Techer", class:"btn btn-success is-medium" %>
                </div>
              </div>
            <% end %>
            <br />
             <%= link_to 'Back', current_admin %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>