<%= render 'dash' %>
<!-- Begin Page Content -->
<div class="container-fluid">
  <!-- Page Heading -->
  <h1>Classes</h1>
  <button id="add__new__list" type="button" class="btn btn-success" data-toggle="modal" data-target=".bd-example-modal-lg"><i class="fa fa-plus"></i> Create class</button>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Class</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @classes.each do |grade| %>
        <tr>
          <td><%= link_to grade.name, [grade.school, grade] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
</div>
<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="card-body text-center">
        <h4 class="card-title">Upload</h4>
      </div>
      <div class=" card col-8 offset-2 my-2 p-3">
        <%= form_for [current_admin.school, Grade.new] do |f| %>
        <div class="form-inputs">
            <%= f.label :name %>
            <%= f.text_field :name, required: true, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.hidden_field :school_id, value: current_admin.school.id %>
        </div>
        <div class="form-actions">
            <%= f.button :submit %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- /.container-fluid -->
<%= render 'dashend' %>