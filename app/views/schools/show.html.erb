<!-- Page Header -->
<header class="masthead" style='background-image: url(<%= image_url("home-bg.jpg") %>)'>
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="site-heading">
          <h1>Welcome to</h1>
          <span class="subheading"><%=  @school.name %></span>
        </div>
      </div>
    </div>
  </div>
</header>
<div class="container">
  <h1 class="my-4">Latest news</h1>
  <!-- Marketing Icons Section -->
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <% if @blogs.any? %>
        <% @blogs.each do |blog| %>
          <div class="post-preview row">
            <div class="col-lg-4 col-md-10 mx-auto blog-image">
              <%= link_to school_blog_path(blog.school, blog) do %>
                <%= image_tag blog.image_url class: "card-img-top" %>
              <% end %>
            </div>
            <div class="col-lg-8 col-md-10 mx-auto">
              <%= link_to school_blog_path(blog.school, blog) do %>
                <h2 class="post-title">
                  <%= blog.title %>
                </h2>
                <h3 class="post-subtitle">
                  <%= blog.description %>
                </h3>
              <% end %>
              <p class="post-meta">Posted on <%= blog.created_at %>
              </p>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="post-preview row">
          <div class="col-lg-4 col-md-10 mx-auto blog-image">
            <a href="#">
              <img class="card-img-top" src="http://placehold.it/700x400" alt="">
            </a>
          </div>
          <div class="col-lg-8 col-md-10 mx-auto">
            <a href="#">
              <h2 class="post-title">
                This is a post generated by the system
              </h2>
            </a>
            <p class="post-meta">Posted on 18 April, 2021
            </p>
          </div>
        </div>
      <% end %>
      <hr>
      <!-- Pager -->
      <div class="clearfix">
        <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
      </div>
    </div>
  </div>
