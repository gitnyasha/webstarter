<%= form_with(model: Portal.new, remote: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, required: true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.hidden_field :school_id, value: @school.id %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
