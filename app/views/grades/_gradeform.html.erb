<%= form_with(model: Grade.new, remote: true) do |f| %>
  <div class="form-inputs">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.hidden_field :school_id, value: current_admin.schools.ids %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
